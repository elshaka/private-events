<% provide(:title, 'New event') %>
<h2>New Event</h2>
<div class="form-container">
  <%= form_for @event do |f| %>
    <%= render 'shared/error_messages', object: @event %>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, class: 'form-control', data: {provide: 'datepicker', date_format: 'yyyy-mm-dd' } %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
   <%= f.submit 'Create event', class: 'btn btn-primary' %>
  <% end %>
</div>
